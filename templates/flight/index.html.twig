{% extends 'base.html.twig' %}

{% block title %}Flight index{% endblock %}

{% block body %}
    <h1>Flight index</h1>

    <table class="table container bg-white">
        <thead>
        <tr>
            <th>Numéro de vol</th>
            <th>Ville de départ</th>
            <th>Ville d'arrivée</th>
            <th>Heure de départ</th>
            <th>Heure d'arrivée</th>
            <th>Prix</th>
            <th>Tarif réduit</th>
            <th>Capacité maximale en passagers</th>
        </tr>
        </thead>
        <tbody>
        {% for flight in flights %}
            <tr>
                <td>{{ flight.flightNumber }}</td>
                <td>{{ flight.departureCity }}</td>
                <td>{{ flight.arrivalCity }}</td>
                <td>{{ flight.departureDatetime ? flight.departureDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flight.arrivalDateTime ? flight.arrivalDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flight.price }} €</td>
                <td>{{ flight.reduction ? 'Oui' : 'Non' }}</td>
                <td>{{ flight.seatMax }}</td>
                <td>
                    <a href="{{ path('app_flight_show', {'id': flight.id}) }}">show</a>
                    <a href="{{ path('app_flight_edit', {'id': flight.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_flight_new') }}">Create new</a>
{% endblock %}
